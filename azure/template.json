{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apiAppServiceName": {
            "type": "string"
        },
        "apiCustomHostname": {
            "type": "string",
            "defaultValue": ""
        },
        "apiCertificateName": {
            "type": "string",
            "defaultValue": ""
        },
        "apiCertificateResourceGroup": {
            "type": "string",
            "defaultValue": ""
        },
        "workerAppServiceName": {
            "type": "string"
        },
        "workerAppServicePlanName": {
            "type": "string"
        },
        "sharedAppServicePlanName": {
            "type": "string"
        },
        "sharedAppServicePlanResourceGroup": {
            "type": "string"
        },
        "aseHostingEnvironmentName": {
            "type": "string",
            "defaultValue": ""
        },
        "aseResourceGroup": {
            "type": "string",
            "defaultValue": ""
        },
        "serviceBusNamespaceName": {
            "type": "string"
        },
        "environmentName": {
            "type": "string"
        },
        "configurationStorageConnectionString": {
            "type": "string"
        },
        "apiTokenSecret": {
            "type": "string"
        },
        "apiIssuer": {
            "type": "string"
        },
        "apiAudiences": {
            "type": "string"
        },
        "loggingRedisConnectionString": {
            "type": "string"
        },
        "loggingRedisKey": {
            "type": "string"
        },
        "currentTime": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-08-01",
            "name": "ApplicationInsights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/devops-automation/add-new-generic-arm-templates/Infrastructure/Resources/ARM-Templates/application-insights.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[parameters('apiAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[parameters('apiAppServiceName')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2017-08-01",
            "name": "ApiAppService",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/devops-automation/add-new-generic-arm-templates/Infrastructure/Resources/ARM-Templates/app-service.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('apiAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "ApiTokenSecret",
                                "value": "[parameters('apiTokenSecret')]"
                            },
                            {
                                "name": "ApiIssuer",
                                "value": "[parameters('apiIssuer')]"
                            },
                            {
                                "name": "ApiAudiences",
                                "value": "[parameters('apiAudiences')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "InstrumentationKey",
                                "value": "[reference('ApplicationInsights').Outputs.InstrumentationKey.value]"
                            },
                            {
                                "name": "CurrentTime",
                                "value": "[parameters('currentTime')]"
                            }
                        ]
                    }
                }
            },
            "dependsOn": [
                "ApplicationInsights"
            ]
        },
        {
            "apiVersion": "2017-08-01",
            "name": "WorkerAppServicePlan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/devops-automation/add-new-generic-arm-templates/Infrastructure/Resources/ARM-Templates/app-service-plan.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[parameters('workerAppServicePlanName')]"
                    },
                    "aseHostingEnvironmentName": {
                        "value": "[parameters('aseHostingEnvironmentName')]"
                    },
                    "aseResourceGroup": {
                        "value": "[parameters('aseResourceGroup')]"
                    },
                    "aspSize": {
                        "value": "1"
                    },
                    "aspInstances": {
                        "value": 1
                    }
                }
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2017-08-01",
            "name": "WorkerAppService",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/devops-automation/add-new-generic-arm-templates/Infrastructure/Resources/ARM-Templates/app-service.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('workerAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('workerAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "LocalConfig",
                                "value": "false"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            }
                        ]
                    },
                    "deployStagingSlot": {
                        "value": false
                    }
                }
            },
            "dependsOn": [
                "WorkerAppServicePlan"
            ]
        },
        {
            "apiVersion": "2017-08-01",
            "name": "ServiceBus",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/devops-automation/add-new-generic-arm-templates/Infrastructure/Resources/ARM-Templates/service-bus.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serviceBusNamespaceName": {
                        "value": "[parameters('serviceBusNamespaceName')]"
                    }
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {}
}